# Backend Production Environment Template
# Copy this to .env on production server and fill in real values

# Database
DATABASE_URL=postgresql+asyncpg://coin87v2_user:YOUR_STRONG_PASSWORD@localhost:5432/coin87v2_db

# Security
SECRET_KEY=YOUR_SUPER_SECRET_KEY_MIN_32_CHARS_RANDOM_STRING
API_KEY_SALT=YOUR_API_KEY_SALT_RANDOM_STRING

# CORS - Production domains only
ALLOWED_ORIGINS=https://coin87.com,https://www.coin87.com

# Redis (for caching/sessions if needed)
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=production
DEBUG=false

# Server
HOST=127.0.0.1
PORT=9010
WORKERS=4

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/coin87/backend.log

# External APIs (if any)
# COINGECKO_API_KEY=your_key_here
# BINANCE_API_KEY=your_key_here
